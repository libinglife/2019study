.header {
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    background-color: #fff;
    height: 100rpx;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 99;
    box-sizing: border-box;
}

.header .icon-fabu {
    font-size: 48rpx;
}

.publish-container {
    display: flex;
    width: 68rpx;
    height: 68rpx;
    align-items: center;
    justify-content: center;
}

.search-container {
    flex: 1;
    /* border: 1px solid red; */
    display: flex;
    align-items: center;
    margin-left: 20rpx;
    position: relative;
}

.bar {
    flex: 1;
    border-radius: 50rpx;
    background-color: #f5f5f5;
    height: 68rpx;
    font-size: 28rpx;
    padding-left: 60rpx;
}

.in-bar {
    color: #999;
}

.search {
    display: inline-block;
    width: 88rpx;
    height: 68rpx;
    background-color: #d43c33;
    font-size: 24rpx;
    color: #fff;
    margin-left: 20rpx;
}

.find {
    position: absolute;
    top: 50%;
    left: 16rpx;
    transform: translateY(-50%);
    color: #9f9f9f;
}

.blog-container {
    /* border: 1px solid red; */
    margin-top: 120rpx;
}

.blog-panel {
    margin-bottom: 20rpx;
    box-sizing: border-box;
}