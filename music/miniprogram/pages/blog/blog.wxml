<view class="container">
	<!-- 头部 -->
	<view class="header">
		<view class="publish-container" bind:tap="publish">
			<i class="iconfont icon-fabu" />
		</view>
		<view class="search-container">
			<i class="iconfont icon-sousuo find" />
			<input
			 class="bar"
			 placeholder-class="in-bar"
			 placeholder="请输入内容"
			 type="text"
			/>
			<button size="mini" class="search">搜索</button>
		</view>
	</view>

	<!-- 博客卡片 -->
	<view class="blog-container">
		<block wx:for="{{blogList}}" wx:key="index">
			<view class="blog-panel">
				<x-blog-card blog="{{item}}"/>
			</view>
		</block>
	</view>
	


	<!-- 底部弹层 -->
	<x-login 
		bind:loginSuccess="onSuccessLogin" 
		bind:loginError="onErrorLogin" 
		modelShow="{{modelShow}}"
	/>
</view>

